<% include authmenu.ejs %>


<br>


<div class="container">
    <div class="row">
        <div class="col-lg-12 my-3">
            <div class="pull-right">

            </div>
        </div>
    </div>
    <div id="products" class="row view-group">

                <%  restaurants.forEach(function(restaurant) { %>
                <div class="item col-xs-4 col-lg-4">
                    <div class="thumbnail card">
                        <div class="img-event">
                            <img class="group list-group-image img-fluid" src="data:image/png;base64, <%= restaurant.photo%>" alt="" />
                        </div>
                        <div class="caption card-body">
                            <h4 class="group card-title inner list-group-item-heading">
                                Name : <%= restaurant.Name %> </h4>
                            <p class="group inner list-group-item-text">Name : <%= restaurant.Name %></p>
                            <p class="group inner list-group-item-text">Borough : <%= restaurant.borough %></p>
                            <p class="group inner list-group-item-text">cuisine : <%= restaurant.cuisine %></p>
                            <p class="group inner list-group-item-text">Street : <%= restaurant.Address.Street %></p>
                            <p class="group inner list-group-item-text">Building : <%= restaurant.Address.building %></p>
                            <p class="group inner list-group-item-text">Zipcode : <%= restaurant.Address.zipcode %></p>
                            <p class="group inner list-group-item-text">Coord : { <%= restaurant.coord.Latitude %>  , <%= restaurant.coord.Longitude %> } </p>

                            <div class="row">

                                <div class="col-xs-12 col-md-6">

                                    <a class="btn btn-success" href="/self/edit?id=<%= restaurant.ID %>" >Edit</a>
                                    
                                    <a class="btn btn-danger" href="/self/delete?id=<%=restaurant.ID %>" >Delete</a>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
                <%   }) %>




                </div>
            </div>
</div>


